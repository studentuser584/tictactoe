<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/configTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Configure Login"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/configUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="New username"
        app:layout_constraintTop_toBottomOf="@id/configTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/configCurrentPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Current password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/configUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/configPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="New password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/configCurrentPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/configPasswordConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Confirm new password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/configPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/configInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#B00020"
        app:layout_constraintTop_toBottomOf="@id/configPasswordConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/saveConfigButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/configInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/resetToDefaultButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset to default"
        app:layout_constraintTop_toBottomOf="@id/saveConfigButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
